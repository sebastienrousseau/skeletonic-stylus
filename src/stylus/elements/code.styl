/* @group Code */
code.error,
code.info,
code.primary,
code.secondary,
code.success,
code.tertiary,
code.warning
  border: 0
  margin-top: 0
  position: relative

code,
kbd,
pre,
samp
  font-family: monospace
  font-size: $gr-fsb rem
  overflow: auto
  padding: $gr rem

pre
  margin-bottom: 0
  overflow: auto

pre, code
  direction: ltr
  display: block
  page-break-inside: avoid
  text-align: left
  white-space: pre-wrap
  word-wrap: break-word

code
  border-bottom: .1rem solid var(--cl-black)
  border-left: .9rem solid var(--cl-black)
  border-right: .1rem solid var(--cl-black)
  border-top: .1rem solid var(--cl-black)
  box-shadow: 0 12px 30px -9px var(--cl-grey-200)
  &.primary
      background: var(--bg-primary)
      border-bottom: .1rem solid var(--cl-primary)
      border-left: .9rem solid var(--cl-primary)
      border-right: .1rem solid var(--cl-primary)
      border-top: .1rem solid var(--cl-primary)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color var(--cl-primary)
  &.secondary
      background: var(--bg-secondary)
      border-bottom: .1rem solid var(--cl-secondary)
      border-left: .9rem solid var(--cl-secondary)
      border-right: .1rem solid var(--cl-secondary)
      border-top: .1rem solid var(--cl-secondary)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color var(--cl-secondary)
  &.tertiary
      background: var(--bg-tertiary)
      border-bottom: .1rem solid var(--cl-tertiary)
      border-left: .9rem solid var(--cl-tertiary)
      border-right: .1rem solid var(--cl-tertiary)
      border-top: .1rem solid var(--cl-tertiary)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color: var(--cl-tertiary)
  &.success
      background: var(--bg-success)
      border-bottom: .1rem solid var(--cl-success)
      border-color: var(--cl-success)
      border-left: .9rem solid var(--cl-success)
      border-right: .1rem solid var(--cl-success)
      border-top: .1rem solid var(--cl-success)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color: var(--cl-success)
  &.info
      background: var(--bg-info)
      border-bottom: .1rem solid var(--cl-info)
      border-left: .9rem solid var(--cl-info)
      border-right: .1rem solid var(--cl-info)
      border-top: .1rem solid var(--cl-info)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color: var(--cl-info)
  &.warning
      background: var(--bg-warning)
      border-bottom: .1rem solid var(--cl-warning)
      border-left: .9rem solid var(--cl-warning)
      border-right: .1rem solid var(--cl-warning)
      border-top: .1rem solid var(--cl-warning)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color: var(--cl-warning)
  &.error
      background: var(--bg-danger)
      border-bottom: .1rem solid var(--cl-danger)
      border-left: .9rem solid var(--cl-danger)
      border-right: .1rem solid var(--cl-danger)
      border-top: .1rem solid var(--cl-danger)
      box-shadow: 0 12px 30px -9px var(--cl-grey-200)
      color: var(--cl-danger)

/* @end */
