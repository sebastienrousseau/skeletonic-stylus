/* @group Lists */
ul, ol
  margin: ($gr)rem

ul
  list-style: none outside

ol
  list-style: decimal

ol,
ul.square,
ul.circle,
ul.disc

    margin: ($gr)rem

ul.square
    list-style: square outside

ul.circle
    list-style: circle outside

ul.disc
    list-style: disc outside

ul ul,
ul ol,
ol ol,
ol ul
    font-size: 100%
    margin: round($gr, 1) rem

/* @end */
