/* @group Pulse Animation and Button */

@keyframes pulse-animation
    0%
      opacity: 1
      transform: scale(1)
    50%
      opacity: 0
      transform: scale(1.5)
    100%
      opacity: 0
      transform: scale(1.5)

  .pulse
    overflow: visible
    position: relative
    &::before
      animation: pulse-animation 1s cubic-bezier(.24, 0, .38, 1) infinite
      background-color: inherit
      border-radius: inherit
      content: ''
      display: block
      height: 100%
      left: 0
      position: absolute
      top: 0
      transition: opacity .3s, transform .3s
      width: 100%
      z-index: -1
/* @end */
