/* @group Lists */
table {
	border: 1px solid var(--color);
	border-collapse: collapse;
	border-spacing: 0;
	empty-cells: show;
	padding-bottom: 25px;
}

thead {
	background-color: var(--color-reverse);
	text-align: left;
	vertical-align: top;
}

td, th {
	background-color: transparent;
	border-left: 1px solid var(--color);
	border-width: 0 0 0 1px;
	margin: 0;
	overflow: visible;
	padding: 6px 12px;
	vertical-align: top;
}

td {
	color: var(--color);
}

th {
	color: var(--color-reverse);
}

/* @end */
