.input-success[type=email], .input-success[type=file], .input-success[type=number], .input-success[type=password], .input-success[type=search], .input-success[type=tel], .input-success[type=text], .input-success[type=url], select.input-success, textarea.input-success {
	border-color: var(--cl-success);
	background: var(--bg-success);
}

.input-info[type=email], .input-info[type=file], .input-info[type=number], .input-info[type=password], .input-info[type=search], .input-info[type=tel], .input-info[type=text], .input-info[type=url], select.input-info, textarea.input-info {
	border-color: var(--cl-info);
	background: var(--bg-info);
}

.input-warning[type=email], .input-warning[type=file], .input-warning[type=number], .input-warning[type=password], .input-warning[type=search], .input-warning[type=tel], .input-warning[type=text], .input-warning[type=url], select.input-warning, textarea.input-warning {
