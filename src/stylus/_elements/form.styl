/* @group Input */
input[type=text], input[type=password], input[type=email], input[type=search], input[type=number], input[type=file], input[type=tel], input[type=url], select, textarea {
	background: var(--inverted-color);
	border-radius: 2px;
	border: 1px solid var(--cl-grey-200);
	color: var(--color);
	display: block;
	font-family: 'Consolas', 'Monaco', 'Menlo', monospace;
	font-size: golden-font-size-large rem;
	margin: golden-ratio rem 0;
	outline: none;
	padding: 1.618rem 0 1.618rem 0.618rem;
	transition: all 150ms linear;
	width: 100%;

	&:hover {
		border-color: var(--cl-grey-200);
	}

	&:focus {
		border-color: var(--cl-black);
		outline: none;
	}
}

.input-primary[type=email], .input-primary[type=file], .input-primary[type=number], .input-primary[type=password], .input-primary[type=search], .input-primary[type=tel], .input-primary[type=text], .input-primary[type=url], select.input-primary, textarea.input-primary {
	border-color: var(--cl-primary);
	background: var(--bg-primary);
}

.input-secondary[type=email], .input-secondary[type=file], .input-secondary[type=number], .input-secondary[type=password], .input-secondary[type=search], .input-secondary[type=tel], .input-secondary[type=text], .input-secondary[type=url], select.input-secondary, textarea.input-secondary {
