// Clearfix
.group:after
  clear: both
  content: ""
  display: table

// CSS Layout
.center,
[center]
  align-items: center
  flex-direction: column
  justify-content: center

.left,
[left]
  align-items: flex-start
  display: flex
  flex-direction: column
  justify-content: flex-start

.right,
[right]
  align-items: flex-end
  display: flex
  flex-direction: column
  justify-content: flex-end

// Text
.text-left
  align-self: flex-start
  text-align: left

.text-center
  align-self: center
  text-align: center

.text-right
  align-self: flex-end
  text-align: right

.text-uppercase
  text-transform: uppercase

.text-lowercase
  text-transform: lowercase

// Sizing
.size-full-height
  min-height: 100vh

.size-full-width
  width: 100%

.size-full
  min-height: 100vh
  width: 100%

// Visibility
.hidden,
[hidden]
    display: none

// Flexbox Utilities
.flex,
[flex]
  display: flex

.justify-start,
[justify-start]
  justify-content: flex-start

.justify-center,
[justify-center]
  justify-content: center

.justify-end,
[justify-end]
  justify-content: flex-end

.align-start,
[align-start]
  align-items: flex-start

.align-center,
[align-center]
  align-items: center

.align-end,
[align-end]
  align-items: flex-end

.direction-vertical,
[direction-vertical]
  flex-direction: column

.direction-horizontal,
[direction-horizontal]
  flex-direction: row

.capitalized,
[capitalized]
  text-transform: capitalize

.lowercase,
[lowercase]
  text-transform: lowercase

.uppercase,
[uppercase]
  text-transform: uppercase

.italic,
[italic]
  font-style: italic

.nomargin,
[nomargin]
  margin: 0

.nopadding,
[nopadding]
  padding: 0

.radius,
[radius]
  border-radius: round(gr, 1) rem

.radius-top,
[radius-top]

.radius-bottom,
[radius-bottom]
  border-radius: 0 0 round(gr, 1) rem round(gr, 1) rem
