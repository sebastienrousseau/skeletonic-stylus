/* @group Base */
html
  -webkit-text-size-adjust: 100%
  display: block
  font-family: sans-serif
  font-size: round(63.204452685542773%, 1)
  text-rendering: optimizeLegibility

body
  background-color: var(--background-color)
  color: var(--cl-black)
  font-family: $font
  font-size: $golden-ratio-font-size
  font-weight: 400
  word-wrap: break-word

a,
abbr,
address,
article,
aside,
audio,
b,
blockquote,
body,
button,
caption,
cite,
code,
dd,
del,
dfn,
dl,
dt,
em,
fieldset,
figure,
footer,
form,
h1,
h2,
h3,
h4,
h5,
h6,
header,
hgroup,
html,
i,
iframe,
img,
ins,
kbd,
label,
legend,
li,
mark,
menu,
nav,
object,
ol,
p,
pre,
q,
samp,
section,
select,
small,
span,
strong,
sub,
sup,
table,
tbody,
td,
tfoot,
th,
thead,
time,
tr,
ul,
var,
video
  box-sizing: border-box

b,
body,
strong
  color: var(--cl-black)

em, i
  font-style: italic

small
  font-size: $golden-ratio-font-size-small

sup
  font-size: $golden-ratio-font-size-small
  top: .8em

sub
  bottom: -.8em
  font-size: $golden-ratio-font-size-small

/* @end */
