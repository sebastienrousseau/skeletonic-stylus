{
    "name": "skeletonic-stylus",
    "version": "1.0.5",
    "description": "A lightweight, intuitive, accessible and ultra-responsive Stylus Library to streamline your digital and mobile web development needs. Proudly made with Stylus â¤",
    "keywords": [
        "css",
        "mit-license",
        "open-source",
        "preprocessor",
        "skeletonic-css",
        "skeletonic-stylus",
        "stylus-css",
        "stylus-mixin",
        "stylus"
    ],
    "main": "src/stylus/skeletonic.styl",
    "style": "dist/skeletonic.min.css",
    "filename": "dist/skeletonic.css",
    "repository": "git+https://github.com/sebastienrousseau/skeletonic-stylus.git",
    "author": {
        "name": "Sebastien Rousseau",
        "email": "hello@skeletonicstylus.com",
        "url": "https://skeletonicstylus.com"
    },
    "license": "MIT",
    "license_URI": "http://www.opensource.org/licenses/mit-license.php",
    "bugs": {
        "url": "https://github.com/sebastienrousseau/skeletonic-stylus/issues"
    },
    "homepage": "https://skeletonicstylus.com",
    "autoupdate": {
        "source": "git",
        "target": "git://github.com/sebastienrousseau/skeletonic-stylus.git",
        "fileMap": [
            {
                "basePath": "dist",
                "files": [
                    "**/*"
                ]
            }
        ]
    },
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "// Build": " --- Build Scripts --- ",
        "build": "rm -rf dist && npm run build:skeletonic:css && npm run dev:copy:stylus && npm run dev:copy:readme && npm run dev:copy:logo && cat ./package.json | grep -v '\"private\":' > dist/package.json && npm pack ./dist",
        "build:skeletonic:css": "npm run dev:format-stylus && npm run dev:lint:stylus && npm run dev:clean:directory && npm run dev:compile:core && npm run dev:compile:animations && npm run dev:compile:fonts && npm run dev:compile:colors && npm run dev:autoprefix:directory && npm run dev:minify-css && npm run dev:filesizes:package",
        "// Development": " --- Development Scripts --- ",
        "dev:autoprefix:directory": "postcss -u autoprefixer --verbose --no-map.inline --autoprefixer.browsers \"last 1 versions\" --dir dist/css/ dist/css/*.css",
        "dev:clean:css": "foreach -g \"dist/css/*.css\" -x \"cleancss #{path} -o #{path}\" --no-c",
        "dev:clean:directory": "rimraf dist/css",
        "dev:compile:animations": "stylus src/stylus/animations/_contents.styl -o dist/css/skeletonic-animations.css",
        "dev:compile:colors": "stylus src/stylus/palettes/_contents.styl -o dist/css/skeletonic-colors.css",
        "dev:compile:core": "stylus src/stylus/skeletonic.styl -o dist/css/skeletonic.css",
        "dev:compile:fonts": "stylus src/stylus/fonts/_contents.styl -o dist/css/skeletonic-fonts.css",
        "dev:copy:stylus": "cp -R src/stylus dist/",
        "dev:copy:readme": "cp README.md dist/",
        "dev:copy:logo": "cp -R images/ dist/images/",
        "dev:filesizes:package": "filesizes dist/ > dist/filesize-report.txt",
        "dev:format-stylus": "stylus-supremacy format ./src/stylus/**/*.styl --options ./.stylelintrc.json > ./debug/stylus-supremacy-output.log &",
        "dev:lint:stylus": "stylint src/stylus --strict",
        "dev:minify-css": "find dist/css/ -iname '*.css' -and -not -iname '*.min.css' -exec sh -c 'node_modules/csso-cli/bin/csso {} --output ${0%.css}.min.css' {} \\;",
        "dev:copyright:insert": "find src/stylus/**/* -name \"*.styl\" -exec sh -c \"cat COPYRIGHT.txt {} >> $$.tmp && mv $$.tmp {}\" \\;",
        "// Production": " --- Production Scripts --- ",
        "prepare:skeletonic": "npm run build",
        "publish": "npm publish $(node -p \"p=require('./package.json');p.name+'-'+p.version+'.tgz'\")",
        "test": "echo \"No tests at the moment specified\""
    },
    "devDependencies": {
        "autoprefixer": "^10.2.6",
        "clean-css-cli": "^5.3.0",
        "csso-cli": "^3.0.0",
        "cssstats-cli": "^4.0.2",
        "filesizes": "^0.1.2",
        "foreach-cli": "^1.8.1",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "rimraf": "^3.0.2",
        "stylus": "^0.54.8",
        "stylus-supremacy": "^2.15.0",
        "tablemark-cli": "^2.0.0"
    },
    "pre-commit": "dev:lint:stylus"
}
