/* @group Chameleon Animation */
@keyframes chameleon
  0%
    color: var(--cl-red)
  5%
    color: var(--cl-danger)
  10%
    color: var(--cl-fuchsia)
  15%
    color: var(--cl-purple)
  20%
    color: var(--cl-primary)
  25%
    color: var(--cl-blue)
  30%
    color: var(--cl-navy)
  35%
    color: var(--cl-aqua)
  40%
    color: var(--cl-info)
  45%
    color: var(--cl-green)
  50%
    color: var(--cl-teal)
  55%
    color: var(--cl-olive)
  60%
    color: var(--cl-lime)
  65%
    color: var(--cl-yellow)
  70%
    color: var(--cl-warning)
  75%
    color: var(--cl-link)
  80%
    color: var(--cl-maroon)
  85%
    color: var(--cl-silver)
  90%
    color: var(--cl-grey)
  95%
    color: var(--cl-black)
  100%
    color: var(--cl-white)

@keyframes chameleon-bg
  0%
    background-color: var(--cl-red)
  5%
    background-color: var(--cl-danger)
  10%
    background-color: var(--cl-fuchsia)
  15%
    background-color: var(--cl-purple)
  20%
    background-color: var(--cl-primary)
  25%
    background-color: var(--cl-blue)
  30%
    background-color: var(--cl-navy)
  35%
    background-color: var(--cl-aqua)
  40%
    background-color: var(--cl-info)
  45%
    background-color: var(--cl-green)
  50%
    background-color: var(--cl-teal)
  55%
    background-color: var(--cl-olive)
  60%
    background-color: var(--cl-lime)
  65%
    background-color: var(--cl-yellow)
  70%
    background-color: var(--cl-warning)
  75%
    background-color: var(--cl-link)
  80%
    background-color: var(--cl-maroon)
  85%
    background-color: var(--cl-silver)
  90%
    background-color: var(--cl-grey)
  95%
    color: var(--cl-black)
  100%
    color: var(--cl-white)

.chameleon-txt
  animation-duration: 5s
  animation-name: chameleon

.chameleon-bg
  animation-duration: 5s
  animation-name: chameleon-bg
/* @end */
