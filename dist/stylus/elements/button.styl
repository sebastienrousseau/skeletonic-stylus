	background-color: var(--bg-secondary)
	color: var(--cl-secondary)
	opacity: 1
	text-decoration: none
	transition: all 150ms linear
button.success-outline, .button.success-outline, [type=submit].success-outline
	background-color: var(--cl-white)
	border: 1px solid var(--cl-success)
	color: var(--cl-success)
button.success-outline:hover, .button.success-outline:hover, [type=submit].success-outline:hover
	background-color: var(--bg-success)
	color: var(--cl-success)
	opacity: 1
	text-decoration: none
	transition: all 150ms linear
button.error-outline, .button.error-outline, [type=submit].error-outline
	background-color: var(--cl-white)
	border: 1px solid var(--cl-danger)
	color: var(--cl-danger)
button.error-outline:hover, .button.error-outline:hover, [type=submit].error-outline:hover
	background-color: var(--bg-danger)
	color: var(--cl-danger)
	opacity: 1
	text-decoration: none
	transition: all 150ms linear
button.warning-outline, .button.warning-outline, [type=submit].warning-outline
	background-color: var(--cl-white)
	border: 1px solid var(--cl-warning)
	color: var(--cl-warning)
button.warning-outline:hover, .button.warning-outline:hover, [type=submit].warning-outline:hover
	background-color: var(--bg-warning)
	color: var(--cl-warning)
	opacity: 1
	text-decoration: none
	transition: all 150ms linear

