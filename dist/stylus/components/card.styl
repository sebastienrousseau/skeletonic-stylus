/* @group Cards */

.card-content
  padding: ($gr)rem

.card-body
  flex: 1 1 auto
  padding: ($gr)rem

.card-title
  margin-bottom: ($gr)rem

.card-subtitle
  margin-bottom: 0
  margin-top: -($gr)rem

.cards
  display: flex
  flex-wrap: wrap
  justify-content: space-between

.card
  background: transparent
  border: round($gr px, 1) solid var(--cl-grey-300)
  border-radius: ($gr)rem
  box-shadow: 0 3px 9px 0 var(--cl-grey-200)
  color: var(--cl-black)
  margin-bottom: ($gr)rem
  position: relative
  transition: .30s ease-in-out


/* @end */
